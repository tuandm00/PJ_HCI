<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/textViewTieude"
        android:layout_width="0dp"
        android:layout_height="59dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="20dp"
        android:text="Tieu de"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textViewGia"
        app:layout_constraintEnd_toStartOf="@+id/textViewNguoituyendung"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewGia"
        android:layout_width="151dp"
        android:layout_height="69dp"
        android:layout_marginTop="68dp"
        android:background="#D9D9D9"
        android:text="Gia tien"
        android:textColor="#254FBA"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/textViewTieude"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textViewTieude"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewNoidung"
        android:layout_width="154dp"
        android:layout_height="121dp"
        android:text="Noi dung"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/textViewGia"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textViewGia"
        app:layout_constraintTop_toBottomOf="@+id/textViewGia" />

    <TextView
        android:id="@+id/textViewNguoituyendung"
        android:layout_width="183dp"
        android:layout_height="47dp"
        android:layout_marginTop="8dp"
        android:text="Nguoi tuyen dung"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.931"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewDiadiem"
        android:layout_width="190dp"
        android:layout_height="34dp"
        android:layout_marginTop="5dp"
        android:text="Dia diem"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textViewNguoituyendung"
        app:layout_constraintTop_toBottomOf="@+id/textViewNguoituyendung" />

    <TextView
        android:id="@+id/textViewKynang"
        android:layout_width="190dp"
        android:layout_height="42dp"
        android:text="Ky nang"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textViewDiadiem"
        app:layout_constraintTop_toBottomOf="@+id/textViewDiadiem" />

    <TextView
        android:id="@+id/textViewNgaydang"
        android:layout_width="190dp"
        android:layout_height="34dp"
        android:text="Ngay dang"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textViewKynang"
        app:layout_constraintTop_toBottomOf="@+id/textViewKynang" />


</androidx.constraintlayout.widget.ConstraintLayout>